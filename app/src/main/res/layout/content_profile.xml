<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.globelist.atest.Profile"
    tools:showIn="@layout/activity_profile">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:rowCount="9">

        <Space
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/name" android:inputType="text"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/username" android:inputType="text"
            android:layout_row="2"
            android:layout_column="0" />
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/country" android:inputType="text"
            android:layout_row="3"
            android:layout_column="0" />

    </GridLayout>

</android.support.v4.widget.NestedScrollView>
